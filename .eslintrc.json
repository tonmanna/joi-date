{
    "root": true,
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "require-await": "error",
        "no-async-promise-executor": "error",
        "max-len": [
            "error",
            {
                "code": 180
            }
        ],
        "no-prototype-builtins": "off",
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ]
    }
}